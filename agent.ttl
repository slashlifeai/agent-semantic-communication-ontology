@prefix : <http://example.org/agent-ontology/agent#> .
@prefix core: <http://example.org/agent-ontology/core#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

#################################################################
# Agent Identity Ontology
#################################################################

:AgentIdentity a owl:Class ;
    rdfs:subClassOf core:AgentEntity ;
    rdfs:label "AgentIdentity" ;
    rdfs:comment "The semantic identity profile of an Agent, binding DID, keys, and contextual identity attributes." .

:AgentKeyMaterial a owl:Class ;
    rdfs:label "AgentKeyMaterial" ;
    rdfs:comment "Cryptographic material (public keys, verification keys, signing keys) associated with an Agent identity." .

:TrustAnchor a owl:Class ;
    rdfs:label "TrustAnchor" ;
    rdfs:comment "A root of trust supporting verification of Agent identity or execution context (e.g., TPM, TrustZone, secure enclave, attestation certificate)." .

:ExecutionInstance a owl:Class ;
    rdfs:label "ExecutionInstance" ;
    rdfs:comment "A concrete instantiation of an Agent running within a particular hardware/software environment with attested properties." .

:EnvironmentDescriptor a owl:Class ;
    rdfs:label "EnvironmentDescriptor" ;
    rdfs:comment "A description of the OS, hardware, or sandbox environment hosting an Agent instance." .

#################################################################
# Object Properties
#################################################################

:hasDID a owl:ObjectProperty ;
    rdfs:domain :AgentIdentity ;
    rdfs:range xsd:anyURI ;
    rdfs:label "hasDID" ;
    rdfs:comment "Associates an AgentIdentity with a DID URI (e.g. did:key, did:web, did:pkh)." .

:hasKeyMaterial a owl:ObjectProperty ;
    rdfs:domain :AgentIdentity ;
    rdfs:range :AgentKeyMaterial ;
    rdfs:label "hasKeyMaterial" ;
    rdfs:comment "Links an Agent identity to one or more cryptographic key materials." .

:boundToAgent a owl:ObjectProperty ;
    rdfs:domain :AgentIdentity ;
    rdfs:range core:Agent ;
    rdfs:label "boundToAgent" ;
    rdfs:comment "Binds an AgentIdentity to a concrete Agent entity." .

:verifiedBy a owl:ObjectProperty ;
    rdfs:domain :AgentIdentity ;
    rdfs:range :TrustAnchor ;
    rdfs:label "verifiedBy" ;
    rdfs:comment "Indicates that the authenticity or validity of an AgentIdentity is backed by a trust anchor." .

:instantiates a owl:ObjectProperty ;
    rdfs:domain core:Agent ;
    rdfs:range :ExecutionInstance ;
    rdfs:label "instantiates" ;
    rdfs:comment "Indicates that an Agent manifests as a concrete execution instance." .

:hostedIn a owl:ObjectProperty ;
    rdfs:domain :ExecutionInstance ;
    rdfs:range :EnvironmentDescriptor ;
    rdfs:label "hostedIn" ;
    rdfs:comment "Links an ExecutionInstance to its hosting environment." .

:anchoredBy a owl:ObjectProperty ;
    rdfs:domain :ExecutionInstance ;
    rdfs:range :TrustAnchor ;
    rdfs:label "anchoredBy" ;
    rdfs:comment "Specifies the hardware or software attestation backing an ExecutionInstance." .

#################################################################
# Datatype Properties
#################################################################

:publicKey a owl:DatatypeProperty ;
    rdfs:domain :AgentKeyMaterial ;
    rdfs:range xsd:base64Binary ;
    rdfs:label "publicKey" ;
    rdfs:comment "The public verification key associated with an Agent." .

:verificationMethod a owl:DatatypeProperty ;
    rdfs:domain :AgentKeyMaterial ;
    rdfs:range xsd:string ;
    rdfs:label "verificationMethod" ;
    rdfs:comment "URI or reference string describing the verification method (DID Document compatible)." .

:environmentHash a owl:DatatypeProperty ;
    rdfs:domain :EnvironmentDescriptor ;
    rdfs:range xsd:string ;
    rdfs:label "environmentHash" ;
    rdfs:comment "A reproducible fingerprint of the runtime environment (e.g. Nix derivation hash, measurement value)." .

:attestationDocument a owl:DatatypeProperty ;
    rdfs:domain :TrustAnchor ;
    rdfs:range xsd:string ;
    rdfs:label "attestationDocument" ;
    rdfs:comment "OEM or platform-provided attestation report, certificate, or TPM quote." .
