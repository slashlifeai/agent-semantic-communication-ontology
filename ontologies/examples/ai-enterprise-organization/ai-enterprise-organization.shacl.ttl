@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix core: <https://ns.slashlife.ai/agent/core#> .
@prefix agent: <https://ns.slashlife.ai/agent/agent#> .
@prefix delegation: <https://ns.slashlife.ai/agent/delegation#> .
@prefix ex: <https://ns.slashlife.ai/agent/examples/ai-enterprise-organization#> .

ex:AIEnterpriseOrganizationAgentShape
    a sh:NodeShape ;
    sh:targetNode ex:AIEnterpriseOrganizationAgent ;
    sh:property [
        sh:path agent:hasProfile ;
        sh:node ex:AIEnterpriseOrganizationAgentProfileShape ;
    ] .

ex:AIEnterpriseOrganizationAgentProfileShape
    a sh:NodeShape ;
    sh:property [
        sh:path agent:coreIdentity ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:node [
            a sh:NodeShape ;
            sh:property [
                sh:path agent:did ;
                sh:minCount 1 ;
                sh:maxCount 1 ;
                sh:datatype xsd:string ;
                sh:pattern "^did:example:ai-enterprise-organization-ghi$" ;
            ]
        ]
    ] .

ex:DelegationToEmployeeShape
    a sh:NodeShape ;
    sh:targetNode ex:DelegationToEmployee ;
    sh:property [
        sh:path delegation:delegatedBy ;
        sh:hasValue ex:AIEnterpriseOrganizationAgent ;
    ] ;
    sh:property [
        sh:path delegation:delegatesTo ;
        sh:hasValue <https://ns.slashlife.ai/agent/examples/ai-workforce-employee#AIWorkforceEmployeeAgent> ;
    ] .
