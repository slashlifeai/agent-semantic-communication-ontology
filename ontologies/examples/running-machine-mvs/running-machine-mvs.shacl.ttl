@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix core: <https://ns.slashlife.ai/agent/core#> .
@prefix agent: <https://ns.slashlife.ai/agent/agent#> .
@prefix ex: <https://ns.slashlife.ai/agent/examples/running-machine-mvs#> .

ex:RunningMachineAgentShape
    a sh:NodeShape ;
    sh:targetNode ex:RunningMachineAgent ;
    sh:property [
        sh:path agent:hasProfile ;
        sh:node ex:RunningMachineAgentProfileShape ;
    ] .

ex:RunningMachineAgentProfileShape
    a sh:NodeShape ;
    sh:property [
        sh:path agent:coreIdentity ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:node [
            a sh:NodeShape ;
            sh:property [
                sh:path agent:did ;
                sh:minCount 1 ;
                sh:maxCount 1 ;
                sh:datatype xsd:string ;
                sh:pattern "^did:example:running-machine-123$" ;
            ]
        ]
    ] ;
    sh:property [
        sh:path agent:capabilities ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:node [
            a sh:NodeShape ;
            sh:property [
                sh:path agent:skill ;
                sh:minCount 2 ;
                sh:maxCount 2 ;
            ]
        ]
    ] .
