@prefix : <https://ns.slashlife.ai/agent/examples/stablecoin-settlement#> .
@prefix agent: <https://ns.slashlife.ai/agent/agent#> .
@prefix core: <https://ns.slashlife.ai/agent/core#> .
@prefix capability: <https://ns.slashlife.ai/agent/capability#> .
@prefix payment: <https://ns.slashlife.ai/agent/payment#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

:StablecoinSettlementAgent a core:Agent ;
    rdfs:label "Stablecoin Settlement Agent" ;
    agent:hasProfile [
        a agent:AgentProfile ;
        agent:coreIdentity [
            a agent:AgentIdentity ;
            agent:did "did:example:stablecoin-settlement-def" ;
            agent:title "Stablecoin Settlement Agent" ;
            agent:version "1.0.0"
        ] ;
        agent:purposeAndRole [
            a agent:PurposeRole ;
            agent:objective "To facilitate the settlement of transactions using stablecoins." ;
            agent:owner "did:example:owner"
        ] ;
        agent:capabilities [
            a agent:CapabilityBundle ;
            agent:skill "Stablecoin Transfer", "Transaction Recording"
        ] ;
        agent:operationalTriggersAndIO [
            a agent:OperationalProfile ;
            agent:trigger [
                a agent:Trigger ;
                rdfs:label "Settlement Request"
            ] ;
            agent:input [
                a agent:InputSpec ;
                rdfs:label "Payment Intent"
            ] ;
            agent:output [
                a agent:OutputSpec ;
                rdfs:label "Transaction Receipt"
            ]
        ] ;
        payment:hasPaymentMethod [
            a payment:PaymentMethod ;
            payment:currency "USD" ;
            payment:paymentSystem "Stablecoin"
        ]
    ] .
