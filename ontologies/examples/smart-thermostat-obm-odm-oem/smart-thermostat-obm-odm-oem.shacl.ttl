@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix core: <https://ns.slashlife.ai/agent/core#> .
@prefix agent: <https://ns.slashlife.ai/agent/agent#> .
@prefix intent: <https://ns.slashlife.ai/agent/intent#> .
@prefix delegation: <https://ns.slashlife.ai/agent/delegation#> .
@prefix ex: <https://ns.slashlife.ai/agent/examples/smart-thermostat-obm-odm-oem#> .

# --- Agent Base Shape (reusable) --- 

ex:AgentBaseShape
    a sh:NodeShape ;
    sh:targetClass core:Agent ;
    sh:property [
        sh:path agent:hasProfile ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:node [
            a sh:NodeShape ;
            sh:property [
                sh:path agent:coreIdentity ;
                sh:minCount 1 ;
                sh:maxCount 1 ;
                sh:node [
                    a sh:NodeShape ;
                    sh:property [
                        sh:path agent:did ;
                        sh:minCount 1 ;
                        sh:maxCount 1 ;
                        sh:datatype xsd:string ;
                        sh:pattern "^did:.+$" ;
                    ]
                ]
            ] ;
            sh:property [
                sh:path agent:purposeAndRole ;
                sh:minCount 1 ;
                sh:maxCount 1 ;
                sh:node [
                    a sh:NodeShape ;
                    sh:property [
                        sh:path agent:objective ;
                        sh:minCount 1 ;
                        sh:maxCount 1 ;
                        sh:datatype xsd:string ;
                    ]
                ]
            ]
        ]
    ] .

# --- Intent Shapes --- 

ex:IntentShape
    a sh:NodeShape ;
    sh:targetClass core:Intent ;
    sh:property [
        sh:path intent:objective ;
        sh:minCount 1 ;
        sh:datatype xsd:string ;
    ] .

# --- Delegation Shapes --- 

ex:DelegationShape
    a sh:NodeShape ;
    sh:targetClass delegation:Delegation ;
    sh:property [
        sh:path delegation:delegatedBy ;
        sh:minCount 1 ;
        sh:class core:Agent ;
    ] ;
    sh:property [
        sh:path delegation:delegatesTo ;
        sh:minCount 1 ;
        sh:class core:Agent ;
    ] ;
    sh:property [
        sh:path delegation:delegationScope ;
        sh:minCount 1 ;
        sh:datatype xsd:string ;
    ] .

# --- Action Shapes --- 

ex:ActionShape
    a sh:NodeShape ;
    sh:targetClass core:Action ;
    sh:property [
        sh:path core:contextOf ;
        sh:minCount 1 ;
        sh:class delegation:Delegation ;
    ] ;
    sh:property [
        sh:path core:producesArtifact ;
        sh:minCount 1 ;
        sh:class core:Artifact ;
    ] .

# --- Artifact Shapes --- 

ex:ArtifactShape
    a sh:NodeShape ;
    sh:targetClass core:Artifact ;
    sh:property [
        sh:path core:description ;
        sh:minCount 1 ;
        sh:datatype xsd:string ;
    ] .

# --- Specific Agent Shapes (if needed, extending AgentBaseShape) --- 

ex:InnovateTechRD_AgentShape
    a sh:NodeShape ;
    sh:targetNode ex:InnovateTechRD_Agent ;
    sh:property [
        sh:path agent:hasProfile ;
        sh:node [
            a sh:NodeShape ;
            sh:property [
                sh:path agent:capabilities ;
                sh:node [
                    a sh:NodeShape ;
                    sh:property [
                        sh:path agent:skill ;
                        sh:hasValue "Smart Energy-Efficient Thermostat Design" ;
                    ]
                ]
            ]
        ]
    ] .
