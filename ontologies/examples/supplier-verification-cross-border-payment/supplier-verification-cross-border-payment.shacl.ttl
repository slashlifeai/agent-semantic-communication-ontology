@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix core: <https://ns.slashlife.ai/agent/core#> .
@prefix agent: <https://ns.slashlife.ai/agent/agent#> .
@prefix intent: <https://ns.slashlife.ai/agent/intent#> .
@prefix delegation: <https://ns.slashlife.ai/agent/delegation#> .
@prefix security: <https://ns.slashlife.ai/agent/security-binding#> .
@prefix payment: <https://ns.slashlife.ai/agent/payment#> .
@prefix ex: <https://ns.slashlife.ai/agent/examples/supplier-verification-cross-border-payment#> .

# --- Agent Shapes --- 

ex:AgentBaseShape
    a sh:NodeShape ;
    sh:targetClass core:Agent ;
    sh:property [
        sh:path agent:hasProfile ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:node [
            a sh:NodeShape ;
            sh:property [
                sh:path agent:coreIdentity ;
                sh:minCount 1 ;
                sh:maxCount 1 ;
                sh:node [
                    a sh:NodeShape ;
                    sh:property [
                        sh:path agent:did ;
                        sh:minCount 1 ;
                        sh:maxCount 1 ;
                        sh:datatype xsd:string ;
                        sh:pattern "^did:.+$" ;
                    ]
                ]
            ] ;
            sh:property [
                sh:path agent:purposeAndRole ;
                sh:minCount 1 ;
                sh:maxCount 1 ;
                sh:node [
                    a sh:NodeShape ;
                    sh:property [
                        sh:path agent:objective ;
                        sh:minCount 1 ;
                        sh:maxCount 1 ;
                        sh:datatype xsd:string ;
                    ]
                ]
            ]
        ]
    ] .

# --- Intent Shape --- 

ex:ProcurementIntentShape
    a sh:NodeShape ;
    sh:targetNode ex:ProcurementIntent ;
    sh:property [
        sh:path intent:objective ;
        sh:minCount 1 ;
        sh:datatype xsd:string ;
    ] .

# --- Delegation Shapes --- 

ex:DelegationShape
    a sh:NodeShape ;
    sh:targetClass delegation:Delegation ;
    sh:property [
        sh:path delegation:delegatedBy ;
        sh:minCount 1 ;
        sh:class core:Agent ;
    ] ;
    sh:property [
        sh:path delegation:delegatesTo ;
        sh:minCount 1 ;
        sh:class core:Agent ;
    ] ;
    sh:property [
        sh:path delegation:delegationScope ;
        sh:minCount 1 ;
        sh:datatype xsd:string ;
    ] .

# --- Artifact Shapes --- 

ex:VerificationReportShape
    a sh:NodeShape ;
    sh:targetNode ex:VerificationReport ;
    sh:property [
        sh:path core:description ;
        sh:minCount 1 ;
        sh:datatype xsd:string ;
    ] ;
    sh:property [
        sh:path security:securityBinding ;
        sh:minCount 1 ;
        sh:node [
            a sh:NodeShape ;
            sh:property [
                sh:path security:cryptographicBinding ;
                sh:hasValue "JWS" ;
            ]
        ]
    ] .

ex:PaymentConfirmationShape
    a sh:NodeShape ;
    sh:targetNode ex:PaymentConfirmation ;
    sh:property [
        sh:path core:description ;
        sh:minCount 1 ;
        sh:datatype xsd:string ;
    ] .
