{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ns.slashlife.ai/agent/profiles/intent.jsonld",
  "title": "Intent Schema",
  "description": "Defines the semantic statement expressing what an agent aims to achieve.",
  "type": "object",
  "@context": "https://ns.slashlife.ai/agent/context/intent.jsonld",

  "properties": {
    "id": {
      "type": "string",
      "format": "uri",
      "description": "Unique identifier for the intent."
    },
    "type": {
      "type": "string",
      "const": "intent:Intent"
    },
    "hasIntentType": {
      "type": "object",
      "properties": {
        "id": { "type": "string", "format": "uri" },
        "type": { "type": "string", "const": "intent:IntentType" }
      },
      "required": ["id", "type"]
    },
    "hasParameter": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "format": "uri" },
          "type": { "type": "string", "const": "intent:IntentParameter" },
          "paramName": { "type": "string" },
          "paramType": { "type": "string" },
          "paramValue": { "type": "string" }
        },
        "required": ["id", "type", "paramName", "paramType", "paramValue"]
      }
    },
    "authorizedBy": {
      "type": "string",
      "format": "uri",
      "description": "Link to the delegation statement that authorizes this intent."
    },
    "producesAction": {
      "type": "object",
      "properties": {
        "id": { "type": "string", "format": "uri" },
        "type": { "type": "string", "const": "intent:Action" },
        "hasActionType": {
          "type": "object",
          "properties": {
            "id": { "type": "string", "format": "uri" },
            "type": { "type": "string", "const": "intent:ActionType" }
          },
          "required": ["id", "type"]
        },
        "executedIn": {
          "type": "string",
          "format": "uri",
          "description": "Link to the execution context."
        },
        "loggedAs": {
          "type": "string",
          "format": "uri",
          "description": "Link to the ledger record."
        }
      },
      "required": ["id", "type", "hasActionType"]
    }
  },
  "required": ["id", "type", "hasIntentType"]
}
