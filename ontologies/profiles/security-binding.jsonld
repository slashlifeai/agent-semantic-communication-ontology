{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ns.slashlife.ai/agent/profiles/security-binding.jsonld",
  "title": "Security Binding Schema",
  "description": "Defines the cryptographic trust chain binding DID, Key Material, Hardware, and Ledger verification.",
  "type": "object",
  "@context": "https://ns.slashlife.ai/agent/context/security-binding.jsonld",

  "properties": {
    "id": {
      "type": "string",
      "format": "uri",
      "description": "Unique identifier for the security binding instance."
    },
    "type": {
      "type": "string",
      "const": "sec:SecurityBinding"
    },
    "hasKeyMaterial": {
      "type": "object",
      "properties": {
        "id": { "type": "string", "format": "uri" },
        "type": { "type": "string", "const": "sec:KeyMaterial" },
        "keyType": {
          "type": "object",
          "properties": {
            "id": { "type": "string", "format": "uri" },
            "type": { "type": "string", "const": "sec:KeyType" }
          },
          "required": ["id", "type"]
        },
        "anchoredBy": {
          "type": "object",
          "properties": {
            "id": { "type": "string", "format": "uri" },
            "type": { "type": "string", "const": "sec:HardwareRootOfTrust" },
            "verifiedBy": {
              "type": "object",
              "properties": {
                "id": { "type": "string", "format": "uri" },
                "type": { "type": "string", "const": "sec:TrustAnchor" }
              },
              "required": ["id", "type"]
            },
            "attestationReport": { "type": "string" },
            "trustLevel": { "type": "string" }
          },
          "required": ["id", "type", "verifiedBy"]
        },
        "keyValue": { "type": "string" }
      },
      "required": ["id", "type", "keyType", "anchoredBy", "keyValue"]
    },
    "signsRecord": {
      "type": "string",
      "format": "uri",
      "description": "Link to the ledger record signed using this key material."
    }
  },
  "required": ["id", "type", "hasKeyMaterial"]
}
