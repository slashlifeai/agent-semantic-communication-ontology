{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ns.slashlife.ai/agent/profiles/agent-profile.jsonld",
  "title": "Agent Profile Schema",
  "description": "Defines the pragmatic and behavioral parameters of an autonomous Agent.",
  "type": "object",
  "@context": "https://ns.slashlife.ai/agent/context/agent-profile.jsonld",

  "properties": {
    "id": { "type": "string", "format": "uri" },
    "type": { "type": "string", "const": "agent-profile:AgentProfile" },

    "hasPersonality": {
      "type": "object",
      "properties": {
        "id": { "type": "string", "format": "uri" },
        "type": { "type": "string", "const": "agent-profile:Personality" },
        "traits": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "required": ["id", "type"]
    },

    "usesLanguage": {
      "type": "object",
      "properties": {
        "id": { "type": "string", "format": "uri" },
        "type": { "type": "string", "const": "agent-profile:LanguagePreference" },
        "preferred_language": { "type": "string" },
        "register": { "type": "string" },
        "formality": { "type": "string" }
      },
      "required": ["id", "type", "preferred_language"]
    },

    "hasToneModel": {
      "type": "object",
      "properties": {
        "id": { "type": "string", "format": "uri" },
        "type": { "type": "string", "const": "agent-profile:ToneModel" },
        "cadence": { "type": "string" },
        "assertiveness": { "type": "string" },
        "warmth": { "type": "string" },
        "interaction_style": { "type": "string" }
      },
      "required": ["id", "type"]
    }
  },

  "required": ["id", "type", "hasPersonality", "usesLanguage", "hasToneModel"]
}